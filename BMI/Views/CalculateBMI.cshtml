@model YourNamespace.Models.BMICalculator

@{
    ViewBag.Title = "Tính Chỉ Số BMI";
}

<h2>Tính Chỉ Số BMI</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label for="Weight">Cân nặng (kg):</label>
        <input type="number" step="0.1" name="Weight" required />
    </div>
    <div>
        <label for="Height">Chiều cao (m):</label>
        <input type="number" step="0.01" name="Height" required />
    </div>
    <button type="submit">Tính BMI</button>
</form>

@if (ViewBag.BMI != null)
{
    <h3>Chỉ số BMI của bạn là: @ViewBag.BMI</h3>
}