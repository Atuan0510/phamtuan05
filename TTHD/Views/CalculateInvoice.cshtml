@model YourNamespace.Models.Invoice

@{
    ViewBag.Title = "Tính Tiền Hóa Đơn";
}

<h2>Tính Tiền Hóa Đơn</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label for="Quantity">Số lượng:</label>
        <input type="number" name="Quantity" required />
    </div>
    <div>
        <label for="UnitPrice">Đơn giá:</label>
        <input type="number" step="0.01" name="UnitPrice" required />
    </div>
    <button type="submit">Tính Hóa Đơn</button>
</form>

@if (ViewBag.TotalAmount != null)
{
    <h3>Tổng tiền hóa đơn của bạn là: @ViewBag.TotalAmount</h3>
}