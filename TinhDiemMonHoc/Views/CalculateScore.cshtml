
    ViewBag.Title = "Tính Điểm Môn Học";
}

<h2>Tính Điểm Môn Học</h2>

<form asp-action="Calculate" method="post">
    <div>
        <label for="ScoreA">Điểm A:</label>
        <input type="number" step="0.1" name="ScoreA" required />
    </div>
    <div>
        <label for="ScoreB">Điểm B:</label>
        <input type="number" step="0.1" name="ScoreB" required />
    </div>
    <div>
        <label for="ScoreC">Điểm C:</label>
        <input type="number" step="0.1" name="ScoreC" required />
    </div>
    <button type="submit">Tính Điểm</button>
</form>

@if (ViewBag.FinalScore != null)
{
    <h3>Điểm cuối môn học của bạn là: @ViewBag.FinalScore</h3>
}